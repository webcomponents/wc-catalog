{
  "name": "@webcomponents/registry",
  "version": "0.0.0",
  "private": true,
  "description": "A web component registry database and server",
  "author": "Google LLC",
  "homepage": "",
  "license": "BSD-3-Clause",
  "type": "module",
  "main": "index.js",
  "files": [
    "lib",
    "index.{d.ts,d.ts.map,js,js.map}"
  ],
  "scripts": {
    "build": "wireit",
    "start": "wireit",
    "start:dev": "wireit",
    "emulators:start": "firebase emulators:start --project wc-catalog",
    "firebase": "firebase"
  },
  "wireit": {
    "build": {
      "command": "../../node_modules/.bin/tsc",
      "dependencies": [
        "../custom-element-manifest-tools:build",
        "../registry-api:build"
      ],
      "files": [
        "tsconfig.json",
        "src/**/*.ts"
      ],
      "output": [
        "lib",
        "index.{js,js.map,d.ts,d.ts.map}",
        "tsconfig.tsbuildinfo"
      ],
      "clean": "if-file-deleted"
    },
    "start": {
      "command": "node --enable-source-maps index.js",
      "dependencies": [
        "build"
      ]
    },
    "start:dev": {
      "command": "FIRESTORE_EMULATOR_HOST=localhost:8088 npm start",
      "dependencies": [
        "build"
      ]
    }
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/typed-document-node": "^2.2.8",
    "@graphql-codegen/typescript": "^2.4.8",
    "@graphql-codegen/typescript-resolvers": "^2.6.1",
    "@types/node": "^18.0.6",
    "@types/npm-registry-fetch": "^8.0.0",
    "@types/source-map-support": "^0.5.3",
    "firebase-tools": "^11.3.0"
  },
  "dependencies": {
    "@google-cloud/firestore": "^5.0.2",
    "@graphql-tools/schema": "^8.3.6",
    "@koa/router": "^12.0.0",
    "@types/koa": "^2.13.1",
    "@types/koa__router": "^8.0.4",
    "@types/koa-bodyparser": "^4.3.1",
    "custom-elements-manifest": "^1.0.0",
    "firebase": "^9.6.10",
    "firebase-admin": "^11.0.0",
    "graphql": "^16.3.0",
    "graphql-helix": "^1.12.0",
    "graphql-tools": "^8.2.4",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "node-fetch": "^3.2.3",
    "npm-registry-fetch": "^13.1.0",
    "@webcomponents/registry-api": "0.0.0",
    "@webcomponents/custom-element-manifest-tools": "0.0.0"
  }
}
